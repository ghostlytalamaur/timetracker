<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@android:color/holo_blue_light</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
        <item name="colorSwitchThumbNormal">@color/colorSwitchThumbNormal</item>
        <item name="actionButtonColor">@android:color/white</item>
        <!--<item name="colorControlNormal">@color/color_actionbar_icon</item>-->
        <item name="coordinatorLayoutStyle">@style/Widget.Design.CoordinatorLayout</item>

        <item name="preferenceTheme">
            @style/PreferenceThemeOverlay.v14.Material
        </item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="ListSelectedBackground">
        <!--<item name="android:background">?attr/selectableItemBackground</item>-->
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/list_item_background</item>

    </style>

    <style name="NotEditableEditTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textDirection">rtl</item>
    </style>

</resources>

