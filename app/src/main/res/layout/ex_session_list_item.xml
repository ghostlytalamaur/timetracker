<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="SessionGroup"
            type="mvasoft.timetracker.extlist.modelview.SessionGroupViewModel"
            />

        <variable
            name="actionHandler"
            type="com.drextended.actionhandler.listener.ActionClickListener"/>
        <import
            alias="ActionType"
            type="mvasoft.timetracker.extlist.view.ExSessionListActionType" />
        <import
            alias="v"
            type="android.view.View" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        app:actionHandler="@{actionHandler}"
        app:actionType="@{ActionType.EDIT}"
        app:model="@{SessionGroup}">

        <android.support.constraint.ConstraintLayout
            style="@style/ListSelectedBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:clickable="false"
            tools:ignore="HardcodedText">

            <TextView
                android:id="@+id/tvStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="@{SessionGroup.startDate}"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="start date" />

            <TextView
                android:id="@+id/tvEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:text="@{SessionGroup.endDate}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvStart"
                app:layout_constraintVertical_bias="1.0"
                tools:text="end date" />


            <TextView
                android:id="@+id/tvElapsed"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:gravity="end|center_vertical"
                android:text="@{SessionGroup.duration}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"
                tools:text="duration" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:text="@{SessionGroup.startTime}"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvStart"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="start time" />

            <TextView
                android:id="@+id/tvEndTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:text="@{SessionGroup.endTime}"
                app:layout_constraintBaseline_toBaselineOf="@+id/tvEnd"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="end time" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</layout>
