<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>
        <variable
            name="list_model"
            type="mvasoft.recyclerbinding.viewmodel.ListViewModel"
            />
        <variable
            name="view_model"
            type="mvasoft.timetracker.ui.extlist.DayItemViewModel"
            />

        <variable
            name="actionHandler"
            type="com.drextended.actionhandler.listener.ActionClickListener"/>
        <import
            alias="ActionType"
            type="mvasoft.timetracker.ui.extlist.ExSessionListFragment.ExSessionListActionType" />

        <import
            alias="v"
            type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ListSelectedBackground"
        app:actionHandler="@{actionHandler}"
        app:actionType="@{ActionType.CLICK}"
        app:actionTypeLongClick="@{ActionType.SELECT}"
        app:model="@{view_model}"
        >

        <android.support.constraint.ConstraintLayout
            style="@style/ListSelectedBackground"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:animateLayoutChanges="true"
            android:clickable="false"
            android:minHeight="48dp"
            tools:ignore="HardcodedText">


            <TextView
                android:id="@+id/tvTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{view_model.targetTimeDiff}"
                android:textColor="@{safeUnbox(view_model.isTargetAchieved) ? @color/colorTextPositive : @color/colorTextNegative}"
                app:layout_constraintBottom_toBottomOf="@+id/imgTarget"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgTarget"
                app:layout_constraintTop_toTopOf="@+id/imgTarget"
                tools:text="target" />

            <ImageView
                android:id="@+id/imgTarget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/imgDuration"
                app:layout_constraintStart_toStartOf="@+id/imgDuration"
                app:layout_constraintTop_toBottomOf="@+id/imgDuration"
                app:srcCompat="@{safeUnbox(view_model.isTargetAchieved) ? @drawable/ic_timer : @drawable/ic_timer_off}"
                tools:srcCompat="@drawable/ic_timer"
                />

            <TextView
                android:id="@+id/tvElapsed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:text="@{view_model.duration}"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/imgDuration"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imgDuration"
                tools:text="duration" />

            <TextView
                android:id="@+id/tvStartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@{view_model.getDayText}"
                app:layout_constraintBottom_toBottomOf="@+id/imgStart"
                app:layout_constraintStart_toEndOf="@+id/imgStart"
                app:layout_constraintTop_toTopOf="@+id/imgStart"
                tools:text="Moonday, 20 april 2018" />

            <ImageView
                android:id="@+id/imgStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/cbSelected"
                app:layout_constraintStart_toEndOf="@+id/cbSelected"
                app:layout_constraintTop_toTopOf="@+id/cbSelected"
                app:srcCompat="@drawable/ic_clock_in" />

            <ImageView
                android:id="@+id/imgDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toStartOf="@+id/tvElapsed"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_clock_progress" />

            <CheckBox
                android:id="@+id/cbSelected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:checked="@{safeUnbox(view_model.isSelected)}"
                android:visibility="@{safeUnbox(list_model.hasSelectedItems) ? v.VISIBLE : v.GONE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </android.support.constraint.ConstraintLayout>
    </LinearLayout>
</layout>
